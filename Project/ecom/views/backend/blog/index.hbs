<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">{{title}}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">

          <div class="card">
            <div class="card-body">
                <a class="btn btn-outline-warning btn-sm float-end my-2" href="/admin/blog/create">Create</a>

              <!-- Dark Table -->
              <table class="table table-dark">
                <thead>
                  <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>

                  {{#each data}}
                  <tr>
                    <td>{{title}}</td>
                    <td>
                      <img src="/{{image}}" width="60px" alt="{{title}}">
                    </td>
                    <td>
                        <a href="/admin/blog/{{id}}/show" class="btn btn-outline-info btn-sm">Show</a>
                        <a href="/admin/blog/{{id}}/edit" class="btn btn-outline-primary btn-sm">Edit</a>

                        <form action="/admin/blog/{{id}}/delete" method="post">
                          <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    </td>
                  </tr>
                  {{/each}}

                </tbody>
              </table>
              <!-- End Dark Table -->

            </div>
          </div>
    </section>
</main>